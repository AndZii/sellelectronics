<div class="super-form">

<%= form_for(@item, :class => 'form-horizontal ')  do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <%= f.text_field :name,  :class => 'form-control', :placeholder => 'Your name'%>
      <br/>
      <%= f.text_field :email,  :class => 'form-control', :placeholder => 'e-mail'%>
      <br/>
      <%= f.text_field :phone,  :class => 'form-control', :placeholder => 'phone number'%>
      <br/>
      <%= f.select(:location, options_for_select(['Manhattan', 'Bronx', 'Queens',  'Brooklyn', 'Staten Island', 'Long Island', 'New Jersey', 'Connecticuts']), {}, {class: "form-control"}) %>
      <br/>
      <%= f.text_field :title,  :class => 'form-control', :placeholder => 'Item'%>
      <br/>
      <%= f.text_field :price,  :class => 'form-control', :placeholder => 'Price'%>
      <br/>
      <%= f.text_area :description,  :class => 'form-control', :rows => '4' , :placeholder => 'Description'%>
      <br/>
      <%= f.file_field :photo_1, :class => 'btn btn-sm btn-default btn-inverse' %>
      <br/>
      <%= f.file_field :photo_2, :class => 'btn btn-sm btn-default btn-inverse' %>
      <br/>
      <%= f.file_field :photo_3, :class => 'btn btn-sm btn-default btn-inverse' %>
      <br/>
    <%= f.submit :class => 'btn btn-success'%>
<% end %>

  </div>